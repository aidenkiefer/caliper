# Database Configuration
DATABASE_URL=postgresql://quant_user:quant_password@localhost:5432/quant_trading

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Alpaca API Configuration
# =============================================================================
# Get your keys from: https://alpaca.markets/
# 
# IMPORTANT: Paper and Live trading use DIFFERENT API keys and base URLs
# - Paper Trading: Use paper account API keys with paper-api.alpaca.markets
# - Live Trading: Use live account API keys with api.alpaca.markets
#
# MODE VALIDATION: On startup, the system validates that TRADING_MODE matches
# the API key type. If PAPER mode is set but live API keys are detected (or
# vice versa), trading will be halted and a CRITICAL alert will be sent.
# =============================================================================

# Alpaca Paper Trading API (for testing and development)
ALPACA_API_KEY=your_paper_api_key
ALPACA_SECRET_KEY=your_paper_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Trading Mode (PAPER or LIVE)
# - PAPER: Uses paper trading account (no real money)
# - LIVE: Uses live trading account (real money - USE WITH EXTREME CAUTION)
# 
# The system will validate that TRADING_MODE matches the API key type:
# - PAPER mode requires paper API keys (paper-api.alpaca.markets)
# - LIVE mode requires live API keys (api.alpaca.markets)
# 
# If mismatch detected: Trading halted, CRITICAL alert sent, manual reset required
TRADING_MODE=PAPER

# Logging
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000
